{
  "image": "mcr.microsoft.com/devcontainers/typescript-node:dev-20-bookworm",
  "hostRequirements": {
    "cpus": 4
  },
  "updateContentCommand": "npm install -g @angular/cli",
  "postAttachCommand": "bash .devcontainer/setup.sh",
  "portsAttributes": {
    "8080": {
      "label": "Angular Online Payments Sample App",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Node.js API Server",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [8080, 3000]
}
  